<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.ac.bnc.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_patient"
        android:name="com.ac.bnc.ui.patient.PatientFragment"
        android:label="@string/title_exam"
        tools:layout="@layout/fragment_patient" />

    <fragment
        android:id="@+id/navigation_exam"
        android:name="com.ac.bnc.ui.exam.ExamFragment"
        android:label="@string/title_exam"
        tools:layout="@layout/fragment_exam" />

    <fragment
        android:id="@+id/navigation_records"
        android:name="com.ac.bnc.ui.records.RecordFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_records" />

    <fragment
        android:id="@+id/navigation_setting"
        android:name="com.ac.bnc.ui.setting.SettingFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_setting" />
</navigation>